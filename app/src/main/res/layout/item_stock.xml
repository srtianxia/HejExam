<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_margin">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="16sp"
        tool:text="黄金期货投机性净多头头寸创历史新高，黄金股或迎来交易机会，龙头就买这几只"/>

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Caption"
        android:textSize="13sp"
        tool:text="今日重要性：✨✨"
        android:layout_marginTop="@dimen/item_padding_margin"/>

    <LinearLayout
        android:layout_marginTop="@dimen/item_padding_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_stock_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_stock_down"/>
            <TextView
                android:id="@+id/tv_stock_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="湖南黄金"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_stock_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_stock_down"/>
            <TextView
                android:id="@+id/tv_stock_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="山东黄金"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_stock_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_stock_down"/>
            <TextView
                android:id="@+id/tv_stock_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text="赤峰黄金"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_marginTop="@dimen/item_padding_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/spilt_line"
        android:scaleType="fitXY"/>


</LinearLayout>